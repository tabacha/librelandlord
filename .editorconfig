# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# HTML/Django Templates - NO automatic line wrapping
[*.html]
indent_style = space
indent_size = 4
max_line_length = off
trim_trailing_whitespace = true

# JavaScript/TypeScript
[*.{js,ts}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
