# Umgebungsvariablen für LibreLandlord OIDC-Konfiguration

# ======= DEMO/DEVELOPMENT SETUP =======
# Für lokale Entwicklung und Tests
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
USE_OIDC_ONLY=False

# ======= PRODUCTION SETUP =======
# Für Live-System mit Docker
# DEBUG=False
# ALLOWED_HOSTS=your-domain.com,your-server-ip
# USE_OIDC_ONLY=True

# ======= KEYCLOAK/OIDC KONFIGURATION =======
# Diese Werte müssen für beide Umgebungen gesetzt werden

# Keycloak Server URL (UCS)
KEYCLOAK_SERVER=https://your-ucs-server.domain.com

# Keycloak Realm Name
KEYCLOAK_REALM=librelandlord

# Client-Konfiguration (von Keycloak Admin Console)
OIDC_CLIENT_ID=librelandlord-django
OIDC_CLIENT_SECRET=your-generated-client-secret

# ======= BEISPIEL FÜR UCS SETUP =======
# KEYCLOAK_SERVER=https://ucs.example.com
# KEYCLOAK_REALM=librelandlord
# OIDC_CLIENT_ID=librelandlord-django
# OIDC_CLIENT_SECRET=abc123def456ghi789
